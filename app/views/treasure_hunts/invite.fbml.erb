<% content_for("invite_user") do %>
    Hey! I found this treasure hunt and I want to play it with you! <%= fb_req_choice("Check it out!", "treasure_hunts/#{@hunt.id}") %>
<% end %>
<% fb_request_form("#{@hunt.title}","invite_user", url_for(@hunt)) do %>
  <%= fb_multi_friend_selector "Select some friends you want to play #{@hunt.title} with" %>
<% end %>

<%= link_to 'Back', @hunt, :id => :back %>
